with "apq.gpr";
with "apq-ct_lib_c.gpr";

project APQ.ct_lib is

	version := APQ.Version;
	target: APQ.Supported_OS := APQ.Target;
	

	for Languages use ( "Ada", "C" );
	for Source_Dirs use ( "src" );
	for Object_Dir use "obj";
	
	-- LIBRARY
	for Library_Dir use "lib";
	for Library_Name use "apq-ct_lib";
	for Library_Kind use APQ'Library_Kind;

	for Library_Version use "libapq-ct_lib.so." & Version;
	
	
	package Compiler is
		for Default_Switches ("ada") use ("-O2", "-gnat05");
	end Compiler;



	package Linker is
		case target is
			when "Windows_NT" =>
				for Default_Switches ("Ada") use (
					"-lapq-ct_libhelp",
					"-Lc:/MinGW/lib",
					"-lct"
				);

			when others =>	
				for Default_Switches ("Ada") use (
					"-lapq-ct_libhelp",
					"-lct"
				);
		end case;
	end Linker;

end APQ.ct_lib;

