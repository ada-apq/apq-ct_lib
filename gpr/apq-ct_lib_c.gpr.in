-- Build file for the c dll that APQ-ct_lib uses.
-- TODO: Make the file actually compile the libraries.

with "apq.gpr";

project APQ.ct_lib_c is

	Version	:= APQ.Version;
	
	for Languages use ("C");

	for Source_Dirs use ( $include_path );

	for Library_Dir use $lib_path;

	for Library_Name use "apq-ct_libhelp";
	for Library_Kind use APQ'Library_Kind;
	for Library_Version use "apq-ct_libhelp.so." & Version;
	for Externally_Built use "true";

end APQ.ct_lib_c;

